<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    
    <name>myTrainer</name>
    <description>
        App to book an appointment
    </description>
    <author email="chh_rahul@live.com" href="http://softweavertech.com">
        Softweaver Team
    </author>
    <content src="index.html" />
